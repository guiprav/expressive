<!doctype html>
<meta charset="utf-8">
<title>
	Expressive
</title>
<script src="//code.jquery.com/jquery-2.0.3.min.js"></script>
<script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css">
<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-theme.min.css">
<link rel="stylesheet/less" href="/css/expressive.less">
<script src="//cdnjs.cloudflare.com/ajax/libs/less.js/1.4.1/less.min.js"></script>
<header class="expressive-header">
	<div class="expressive-header-padder">
		<h1>
			<a href="/">
				Expressive
			</a>
		</h1>
		{{#user}}
			<span class="welcome-message">
				Welcome back, {{name}}!
			</span>
			<span class="account-actions">
				<a href="/post/compose">
					Let the world know
				</a>
				or
				<a href="/account/logout">
					get out.
				</a>
			</span>
		{{/user}}
		{{^user}}
			<form class="login-form" method="post" action="/account/login">
				<input class="form-control" name="email" type="text" placeholder="Email">
				<input class="form-control" name="password" type="password" placeholder="Password">
				<input class="btn btn-default" type="submit" value="Login">
			</form>
		{{/user}}
	</div>
</header>
{{#messages}}
	<div class="alert alert-{{type}}">
		<button type="button" class="close" data-dismiss="alert">
			&times;
		</button>
		{{text}}
	</div>
{{/messages}}
{{&page_html}}
<script src="/js/expressive.js"></script>
