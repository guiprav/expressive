<div class="compose-container">
	<form class="compose-form" method="post">
		<input class="form-control" type="text" name="title" value="{{title}}" placeholder="Post title">
		<textarea class="form-control" name="body" value="{{body}}" placeholder="Write something endearing..."></textarea>
		<input class="form-control" type="text" name="tags" value="{{tags}}" placeholder="Comma-separated list of tags?">
		<input class="btn btn-default" type="submit" value="Let those words be heard!">
	</form>
</div>

