<div class="posts-container">
	{{#error}}
		<div class="alert alert-warning">
			{{this}}
		</div>
	{{/error}}
	{{#posts}}
		<article class="blogpost">
			<header>
				<h1>
					{{title}}
				</h1>
				Posted by
				<a class="author" href="mailto:{{author.email}}">
					{{author.name}}
				</a>
				on
				<span class="date">
					{{verbose-date on}}.
				</span>
				{{#if tags}}
					<div class="tags">
						Tags:
						<ul class="comma-separated">
							{{#tags}}
								<li>{{this}}</li>
							{{/tags}}
						</ul>
					</div>
				{{/if}}
			</header>
			{{markdown body}}
		</article>
	{{/posts}}
	{{^posts}}
		<div class="alert alert-info">
			There are no posts at this time.
		</div>
	{{/posts}}
</div>

