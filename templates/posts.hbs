<div class="posts-container">
	{{#if posts}}
		<div class="search-message">
			<div class="padder">
				Looking for something?
				<a href="/post/search">
					Try searching.
				</a>
			</div>
		</div>
	{{else}}
		<div class="alert alert-info">
			There are no posts at this time.
		</div>
	{{/if}}
	{{#posts}}
		{{> post root=..}}
	{{/posts}}
</div>

